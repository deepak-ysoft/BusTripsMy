    <div class="col-xxl-4">
        <div class="card border card-border-primary">
            <div class="card-header">
                <h6 class="card-title mb-0">Secondary Driver Information </h6>
            </div>
            <div class="card-body">
                @if (Model.DriverName != null)
                {
                    <div class="row mb-3">
                        <div class="col-6 mt-1 fw-medium"> Driver Id :</div>
                        <div class="col-6 mt-1 text-muted">@Model.DriverId</div>
                        <div class="col-6 mt-1 fw-medium"> Driver Name :</div>
                        <div class="col-6 mt-1 text-muted">@Model.DriverName</div>
                        <div class="col-6 mt-1 fw-medium"> Employment Type :</div>
                        <div class="col-6 mt-1 text-muted">@Model.EmploymentType</div>
                        <div class="col-6 mt-1 fw-medium"> License Number :</div>
                        <div class="col-6 mt-1 text-muted">@Model.LicenseNumber</div>
                        <div class="col-6 mt-1 fw-medium"> License Province :</div>
                        <div class="col-6 mt-1 text-muted">@Model.LicenseProvince</div>

                    </div>
                }
                else
                {
                    <span class="h-50"> Waiting for approval</span>
                }
            </div>
        </div>
    </div>
    <div class="col-xxl-4">
        <div class="card border card-border-primary">
            <div class="card-header">
                <h6 class="card-title mb-0">Equipment </h6>
            </div>
            <div class="card-body">

                @if (Model.Manufacturer != null)
                {
                    <div class="row mb-3">
                        <div class="col-6 mt-1 fw-medium"> Manufacturer :</div>
                        <div class="col-6 mt-1 text-muted">@Model.Manufacturer</div>
                        <div class="col-6 mt-1 fw-medium"> Model :</div>
                        <div class="col-6 mt-1 text-muted">@Model.Model</div>
                        <div class="col-6 mt-1 fw-medium"> License Plate :</div>
                        <div class="col-6 mt-1 text-muted">@Model.LicensePlate</div>
                        <div class="col-6 mt-1 fw-medium"> Seating Capacity :</div>
                        <div class="col-6 mt-1 text-muted">@Model.SeatingCapacity</div>
                        <div class="col-6 mt-1 fw-medium"> Year :</div>
                        <div class="col-6 mt-1 text-muted">@Model.Year</div>
                    </div>
                }
                else
                {
                    <span class="h-50"> Waiting for approval</span>
                }
            </div>
