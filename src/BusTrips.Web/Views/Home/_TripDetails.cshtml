</div>

<div class="row">
    <div class="col-lg-12">
        <!-- Tab panes -->
        <div class="tab-content pt-4 ">
            <div class="tab-pane active" id="overview-tab" role="tabpanel">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <span class="fw-medium fs-15">Trip Details</span>
                                @if (Model.Status == "Approved")
                                {
                                    <div class=" fw-medium border-1 border-white bg-info px-2 py-1 text-white rounded">@Model.Status</div>
                                }
                                else
                                {
                                    <div class=" fw-medium border-1 border-white bg-danger px-2 py-1 text-white rounded">@Model.Status</div>
                                }
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-3 mt-4 fw-medium"> Trip Name :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.TripName</div>
                                    @* <div class="col-3 mt-4 fw-medium"> User Name :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.UserName</div>
                                    <div class="col-3 mt-4 fw-medium"> E-mail :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.Email</div> *@
                                    <div class="col-3 mt-4 fw-medium"> Status :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.Status</div>
                                    <div class="col-3 mt-4 fw-medium"> Number Of Passengers :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.NumberOfPassengers</div>
                                    <div class="col-3 mt-4 fw-medium"> Departure Date :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.DepartureDate</div>
                                    <div class="col-3 mt-4 fw-medium"> Departure Time :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.DepartureTime</div>
                                    <div class="col-3 mt-4 fw-medium"> Start City :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.StartCity</div>
                                    <div class="col-3 mt-4 fw-medium"> Start Location :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.StartLocation</div>
                                    <div class="col-3 mt-4 fw-medium"> Destination City :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.DestinationCity</div>
                                    <div class="col-3 mt-4 fw-medium"> Destination Location :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.DestinationLocation</div>
                                    <div class="col-3 mt-4 fw-medium"> Destination Arrival Date :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.DestinationArrivalDate</div>
                                    <div class="col-3 mt-4 fw-medium"> Destination Arrival Time :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.DestinationArrivalTime</div>
                                    <div class="col-3 mt-4 fw-medium"> QuotedPrice :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.QuotedPrice</div>
                                    <div class="col-3 mt-4 fw-medium"> Estimate Link Url :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.EstimateLinkUrl</div>
                                    <div class="col-3 mt-4 fw-medium"> Invoice Link Url :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.InvoiceLinkUrl</div>
                                    <div class="col-3 mt-4 fw-medium"> Created At :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.TripCreatedAt </div>
                                    <div class="col-3 mt-4 fw-medium"> Notes :</div>
                                    <div class="col-3 mt-4 text-muted">@Model.Notes</div>
                                </div>

                                @if ((Model.Status == "Quoted" || Model.Status == "Draft" || Model.Status == "Rejected") && role == "Admin")
                                {
                                    <a href="/Admin/ApproveOrRejectTrip?tripId=@Model.Id&status=Approve" class="btn btn-primary btn-label waves-effect waves-light rounded-pill">
                                        <i class="ri-user-smile-line label-icon align-middle rounded-pill fs-16 me-2"></i>
                                        Approve
                                    </a>
                                }
                                @if ((Model.Status == "Quoted" || Model.Status == "Draft" || Model.Status == "Approved") && role == "Admin")
                                {
                                    <a href="/Admin/ApproveOrRejectTrip?tripId=@Model.Id&status=Reject" class="btn btn-success btn-label waves-effect right waves-light rounded-pill">
                                        <i class="ri-error-warning-line label-icon align-middle rounded-pill fs-16 me-2"></i>
                                        Reject
                                    </a>
                                }
                            </div><!-- end card body -->
                        </div><!-- end card -->
                    </div>
                    <!--end col-->
                </div>
                <!--end row-->
            </div>
            <!--end tab-pane-->
        </div>
        <!--end tab-content-->
    </div>
    <!--end col-->
</div>
<!--end row-->