                        <div class="col-6 mt-1 fw-medium"> Driver Name :</div>
                        <div class="col-6 mt-1 text-muted">@Model.DriverName</div>
                        <div class="col-6 mt-1 fw-medium"> Employment Type :</div>
                        <div class="col-6 mt-1 text-muted">@Model.EmploymentType</div>
                        <div class="col-6 mt-1 fw-medium"> License Number :</div>
                        <div class="col-6 mt-1 text-muted">@Model.LicenseNumber</div>
                        <div class="col-6 mt-1 fw-medium"> License Province :</div>
                        <div class="col-6 mt-1 text-muted">@Model.LicenseProvince</div>

                    </div>
                }
                else
