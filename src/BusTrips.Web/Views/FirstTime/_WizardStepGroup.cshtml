@using BusTrips.Web.Models
@model GroupRequestVM

<div id="wizard-step" data-step="group">
    <div class="modal-header border-0 pb-4">
        <h5 class="modal-title fw-semibold">Create Your Group</h5>
        <small class="text-muted">Provide your group details below</small>
    </div>

    <div class="modal-body">
        <form id="wizardForm" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="step" value="group" />
            <input type="hidden" asp-for="OrgId" />

            <!-- Group Name -->
            <div class="mb-4">
                <label asp-for="GroupName" class="form-label fw-semibold"></label>
                <div class="input-group shadow-sm rounded-3">
                    <span class="input-group-text bg-light text-muted">
                        <i class="bi bi-people"></i>
                    </span>
                    <input asp-for="GroupName" class="form-control border-start-0" placeholder="Group Name" value="@Model?.GroupName" />
                </div>
                <span class="text-danger small">@Html.ValidationMessageFor(m => m.GroupName)</span>
            </div>

            <!-- Short Name -->
            <div class="mb-4">
                <label asp-for="ShortName" class="form-label fw-semibold"></label>
                <div class="input-group shadow-sm rounded-3">
                    <span class="input-group-text bg-light text-muted">
                        <i class="bi bi-tag"></i>
                    </span>
                    <input asp-for="ShortName" class="form-control border-start-0" placeholder="Short Name (max 5)" value="@Model?.ShortName" maxlength="5" />
                </div>
                <span class="text-danger small">@Html.ValidationMessageFor(m => m.ShortName)</span>
            </div>

            <!-- Description -->
            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control shadow-sm rounded-3" placeholder="Optional description">@Model?.Description</textarea>
                <span class="text-danger small">@Html.ValidationMessageFor(m => m.Description)</span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <button type="button" class="btn btn-outline-secondary px-4" id="backToOrgBtn">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </button>
                <button type="submit" class="btn btn-primary px-4">
                    Done <i class="bi bi-check-lg ms-1"></i>
                </button>
            </div>
        </form>
    </div>
</div>
