@using BusTrips.Web.Models
@model BusTrips.Web.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="light" data-sidebar-size="lg">
<head>
    @Html.Partial("~/Views/Shared/_title_meta.cshtml")
    @Html.Partial("~/Views/Shared/_head_css.cshtml")
</head>
<body>
    <!-- auth-page wrapper -->
    <div class="auth-page-wrapper auth-bg-cover py-5 d-flex justify-content-center align-items-center min-vh-100">
        <div class="bg-overlay"></div>

        <!-- auth-page content -->
        <div class="auth-page-content overflow-hidden pt-lg-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card overflow-hidden border-0">
                            <div class="row justify-content-center g-0">
                                <!-- Left side -->
                                <div class="col-lg-6">
                                    <div class="p-lg-5 p-4 auth-one-bg h-100">
                                        <div class="bg-overlay"></div>
                                        <div class="position-relative h-100 d-flex flex-column">
                                            <div class="mb-4">
                                                <a href="#" class="d-block text-white">
                                                    Charter Bus
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Right side -->
                                <div class="col-lg-6">
                                    <div class="p-lg-5 p-4">
                                        <h5 class="text-primary">Forgot Password?</h5>

                                        <div class="mt-2 text-center">
                                            <lord-icon src="https://cdn.lordicon.com/rhvddzym.json"
                                                       trigger="loop"
                                                       colors="primary:#0ab39c"
                                                       class="avatar-xl">
                                            </lord-icon>
                                        </div>

                                        <!-- Message placeholder -->
                                        <div id="forgotPasswordMessage">
                                            @if (ViewBag.Message != null)
                                            {
                                                var alertClass = (ViewBag.IsSuccess == true) ? "alert-success" : "alert-warning";
                                                <div class="alert @alertClass text-center mb-2 mx-2" role="alert">
                                                    @ViewBag.Message
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-borderless alert-warning text-center mb-2 mx-2" role="alert">
                                                    Enter your email and instructions will be sent to you!
                                                </div>
                                            }
                                        </div>

                                        <!-- Form -->
                                        <div class="p-2">
                                            <form id="forgotPasswordForm" method="post" novalidate>
                                                <div class="mb-4">
                                                    <label asp-for="Email" class="form-label">Email</label>
                                                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter email" />
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>

                                                <div class="text-center mt-4">
                                                    <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
                                                </div>
                                            </form>
                                        </div>

                                        <div class="mt-5 text-center">
                                            <p class="mb-0">
                                                Wait, I remember my password...
                                                <a href="@Url.Action("LoginUser", "Account")" class="fw-semibold text-primary text-decoration-underline">Click here</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- end col -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <p class="mb-0">&copy; <script>document.write(new Date().getFullYear())</script> Charter Bus.</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")

    <script src="~/assets/js/pages/form-validation.init.js"></script>
    <script src="~/assets/js/pages/password-addon.init.js"></script>

    <script>
        $(document).ready(function () {
            $("#forgotPasswordForm").submit(function (e) {
                e.preventDefault();

                var form = $(this);
                var formData = form.serialize();

                // Clear old messages
                $("#forgotPasswordMessage").html('');
                $(".text-danger").text('');

                $.ajax({
                    url: "@Url.Action("ForgotPassword", "Account")",
                    type: "POST",
                    data: formData,
                    success: function (res) {
                        if (res.isSuccess) {
                            $("#forgotPasswordMessage").html(
                                `<div class="alert alert-success text-center">${res.message}</div>`
                            );
                            form[0].reset();
                        } else if (res.errors) {
                            $.each(res.errors, function (key, val) {
                                $(`[data-valmsg-for="${key}"]`).text(val[0]);
                            });
                        } else if (res.message) {
                            $("#forgotPasswordMessage").html(
                                `<div class="alert alert-warning text-center">${res.message}</div>`
                            );
                        }
                    },
                    error: function () {
                        $("#forgotPasswordMessage").html(
                            `<div class="alert alert-danger text-center">Something went wrong. Please try again.</div>`
                        );
                    }
                });
            });
        });
    </script>
</body>
</html>
