@model IEnumerable<BusTrips.Web.Models.NotificationDto>

<div id="notificationsContainer" class="row gx-0">
    <!-- LEFT: Notification List -->
    <div id="notificationListContainer" class="col-lg-3 border-end bg-white no-scrollbar">
        <div class="p-3 border-bottom d-flex justify-content-between align-items-center bg-light sticky-top">
            <h6 class="fw-bold mb-0">Notifications</h6>
        </div>

        <div id="notificationList" class="list-group p-2">
            @foreach (var item in Model)
            {
                <a href="javascript:void(0)"
                   onclick="openNotification('@item.Id', this)"
                   class="list-group-item list-group-item-action notification-item d-flex justify-content-between align-items-start @(item.IsRead ? "" : "fw-bold bg-light")">
                    <div class="me-auto notification-list-item">
                        <div class="notification-title">@item.Title</div>
                        <div class="notification-date">@item.Date</div>
                        <div class="notification-message">@item.Message</div>
                    </div>
                    <div class="notification-icon rounded-circle bg-@(item.IsRead ? "secondary" : "primary") text-white p-2 ms-2">
                        <i class="mdi mdi-bell-outline"></i>
                    </div>
                </a>
            }
        </div>
        <div id="noNotificationText" class="text-center text-muted mt-3 small">No notifications</div>
    </div>

    <!-- RIGHT: Notification Details -->
    <div id="notificationDetailsContainer" class="col-lg-9 bg-white">
        <div id="notificationContent" class="pt-4 p-2 text-muted text-center">
            <i class="bx bx-bell fs-1 mb-3"></i>
            <p>Select a notification to view details</p>
        </div>
    </div>
</div>

<style>
    /* Smooth slide */
    #notificationListContainer,
    #notificationDetailsContainer {
        transition: transform 0.35s ease-in-out;
    }

    /* MOBILE VIEW */
    @@media (max-width: 991.98px) {
        #notificationsContainer {
            position: relative;
            overflow: hidden;
            min-height: 100vh;
            background: #fff;
        }

        #notificationListContainer,
        #notificationDetailsContainer {
            position: absolute;
            width: 100% !important;
            top: 0;
            left: 0;
            min-height: 100vh;
            background: #fff;
        }

        #notificationListContainer {
            transform: translateX(0);
            z-index: 2;
        }

        #notificationDetailsContainer {
            transform: translateX(100%);
            z-index: 3;
        }

        #notificationsContainer.show-details #notificationListContainer {
            transform: translateX(-100%);
        }

        #notificationsContainer.show-details #notificationDetailsContainer {
            transform: translateX(0);
        }
        /* Back button inside details header */
        #detailsHeader {
            display: flex;
            align-items: center;
            justify-content: start;
            gap: 8px;
            border-bottom: 1px solid #e9ecef;
            background: #f8f9fa;
            padding: 0.75rem 1rem;
        }

        #backToListBtn {
            border: none;
            background: none;
            font-size: 1rem;
            color: #333;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            #backToListBtn i {
                font-size: 1.2rem;
            }
    }

    @@media (min-width: 992px) {
        #backToListBtn {
            display: none !important;
        }
    }

    @@media (max-width: 991.98px) {
        #backToListBtn {
            display: inline-flex !important;
        }
    }

    /* NOTIFICATION ITEM STYLES */
    .notification-item {
        transition: all 0.3s ease;
        cursor: pointer;
        border-radius: 10px;
        border: 1px solid #f0f0f0;
        padding: 12px 14px;
        margin-bottom: 6px;
    }

        .notification-item:hover {
            background-color: #f8f9fa;
            transform: translateY(-1px);
        }

    .notification-list-item {
        display: flex;
        flex-direction: column;
        gap: 2px;
        max-width: calc(100% - 50px);
    }

    .notification-title,
    .notification-date,
    .notification-message {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .notification-title {
        font-weight: 600;
        font-size: 0.95rem;
        color: #212529;
    }

    .notification-date {
        font-size: 0.8rem;
        color: #868e96;
    }

    .notification-message {
        font-size: 0.85rem;
        color: #495057;
    }

    .notification-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

