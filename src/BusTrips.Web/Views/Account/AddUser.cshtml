@using BusTrips.Domain.Entities
@using BusTrips.Web.Models
@model BusTrips.Web.Models.AddUserVm
@{
    var orgId = ViewBag.OrganizationId;
    ViewData["Title"] = "Add New Member";
}

<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@ViewData["Title"]</h4>
            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <form id="addUserForm" method="post" asp-action="AddUser">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row">
                            <input type="hidden" asp-for="OrgId" />
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter Fist Name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="MemberType" class="form-label"></label>
                                    <select asp-for="MemberType" asp-items="ViewBag.MemberTypes" class="form-select">
                                        <option value="">-- Select Member Type --</option>
                                    </select>

                                    <span asp-validation-for="MemberType" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" type="number" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <!--end col-->
                            <div class="col-lg-12 ">
                                <div class="d-flex justify-content-end mt-3 gap-3">
                                    <button id="submitBtn" class="btn btn-sm btn-primary" type="submit">Submit</button>
                                    <a href="@Model.returnUrl" class="btn btn-sm btn-secondary">Cancel</a>
                                </div>
                            </div>
                            <!--end col-->
                        </div>
                        <!--end row-->
                    </form>
                </div>
            </div>
        </div>
        <div class="mt-4">
            <p class="mb-0">
                Already have an account ?
                <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#inviteMemberModal">
                    Invite Member
                </button>
            </p>
        </div>
    </div>
</div>

<div class="modal fade" id="inviteMemberModal" tabindex="-1" aria-labelledby="inviteMemberModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="inviteForm" method="post" asp-controller="Organizations"  asp-action="Invite">
                @Html.AntiForgeryToken()
                <input type="hidden" name="OrganizationId" value="@Model.OrgId" />

                <div class="modal-header">
                    <h5 class="modal-title" id="inviteMemberModalLabel">Invite Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" name="Email" class="form-control" placeholder="Enter email address" required />
                        <span data-valmsg-for="Email" class="text-danger"></span> <!-- validation message -->
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-sm">Send Invite</button>
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/CustomJs/orgJs/addUserInOrg.js"></script>
}
