@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Drivers";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Drivers to approve </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-bordered table-hover dt-responsive nowrap align-middle customTable" style="width:100%">
                        <thead><tr><th>Email</th><th>Status</th><th>Driver ID</th><th>Actions</th></tr></thead>
                        <tbody>
                            @foreach (var d in Model)
                            {
                                <tr>
                                    <td>@d.Email</td>
                                    <td>@d.ApprovalStatus</td>
                                    <td>@(d.DriverId ?? "-")</td>
                                    <td class="d-flex gap-2">
                                        <a href="/Admin/UserDetails?userId=@d.AppUserId&requestFrom=Drivers" class="btn btn-sm btn-soft-primary"><i class="ri-eye-fill"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>