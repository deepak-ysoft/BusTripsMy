@using BusTrips.Web.Models
@model UserResponseVm

@{
    ViewData["Title"] = "User Details";

    var activeTab = Context.Request.Query["tab"].ToString() ?? "overview";
}
<div class="mt-n1">
@if (Model.Role == "Driver")
{
    <a class="text-dark mb-2  cursor-pointer" href="/Admin/Drivers">⬅ Back</a>
}
else
{
    <a class="text-dark mb-2  cursor-pointer" href="/Admin/Users">⬅ Back</a>
}

<div class="profile-foreground position-relative mx-n4 mt-1">
    <div class="profile-wid-bg">
        <img src="~/assets/images/profile-bg.jpg" alt="" class="profile-wid-img" />
    </div>
</div>
</div>
<div class="pt-4 mb-4 mb-lg-3 pb-lg-4 profile-wrapper">
    <div class="row g-4">
        <div class="col d-flex justify-content-between">
            <div class="p-2">
                <h3 class="text-white mb-1">@Model.FirstName @Model.LastName</h3>
                <p class="text-white-75">@Model.Role</p>
                <div class="hstack text-white-50 gap-1">
                    @if (Model.ApprovalStatus != null && Model.Role == "Driver")
                    {
                        <div class="d-flex gap-3">
                            <div class="ps-0" scope="row">Approval Status :</div>
                            <div class="fw-bold border-1 border-white px-2 py-1 text-white rounded @(Model.ApprovalStatus == "Approved" ? "bg-info" : "bg-danger")">
                                @Model.ApprovalStatus
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="d-flex profile-wrapper">
            <!-- Nav tabs -->
            <ul class="nav nav-pills animation-nav profile-nav gap-2 gap-lg-3 flex-grow-1" role="tablist">
                <li class="nav-item">
                    <a class="nav-link fs-14 @(string.IsNullOrEmpty(activeTab) || (activeTab != "more_info" && activeTab != "documents") ? "active" : "")"
                       data-bs-toggle="tab" href="#overview-tab" role="tab">
                        Overview
                    </a>
                </li>
                @if (Model.Role == "User")
                {
                    <li class="nav-item">
                        <a class="nav-link fs-14 @(activeTab == "more_info" ? "active" : "")" data-bs-toggle="tab" href="#more_Info" role="tab">
                            More Info
                        </a>
                    </li>
                }
                @if (Model.Role == "Driver")
                {
                    <li class="nav-item">
                        <a class="nav-link fs-14 @(activeTab == "documents" ? "active" : "")" data-bs-toggle="tab" href="#documents" role="tab">
                            Documents
                        </a>
                    </li>
                }
            </ul>
        </div>

        <!-- Tab panes -->
        <div class="tab-content pt-4 text-muted">
            <div class="tab-pane @(string.IsNullOrEmpty(activeTab) || (activeTab != "more_info" && activeTab != "documents") ? "active" : "")" id="overview-tab" role="tabpanel">
                <div class="row">
                    <!-- Profile Image -->
                    <div class="col-12 col-md-4">
                        <div class="card shadow-sm border-0 rounded-3">
                            <div class="card-body text-center">
                                <div class="avatar-lg mx-auto m-4">
                                    <img src="@(!string.IsNullOrEmpty(Model.PhotoUrl) ? Model.PhotoUrl : Url.Content("~/assets/images/users/avatar-1.jpg"))"
                                         alt="user-img"
                                         class="rounded-circle shadow-sm"
                                         style="width:120px; height:120px; object-fit:cover;"
                                         onerror="this.onerror=null; this.src='@Url.Content("~/assets/images/users/avatar-1.jpg")';" />
                                </div>
                                <h5 class="mb-1 pt-2 ms-4">@Model.FullName</h5>
                                <p class="text-muted mb-2 ms-4">@Model.Role</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title mt-3">Information</h5>
                                    @if (Model.Role == "Driver")
                                    {
                                        <div class="p-2 d-flex gap-3">
                                            @if (Model.ApprovalStatus == "Pending" || Model.ApprovalStatus == "Rejected")
                                            {
                                                <form method="post" asp-action="Approve" asp-controller="Admin" asp-route-userId="@Model.UserId" class="d-inline">
                                                    <button type="submit" class="btn btn-primary btn-label waves-effect right waves-light">
                                                        <i class="ri-user-smile-line label-icon align-middle fs-16 ms-2"></i> Approve
                                                    </button>
                                                </form>
                                            }
                                            @if (Model.ApprovalStatus == "Pending" || Model.ApprovalStatus == "Approved")
                                            {
                                                <form method="post" asp-action="Reject" asp-controller="Admin" asp-route-userId="@Model.UserId" class="d-inline">
                                                    <button type="submit" class="btn btn-success btn-label waves-effect right waves-light rounded-pill">
                                                        <i class="ri-error-warning-line label-icon align-middle rounded-pill fs-16 me-2"></i> Reject
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    }
                                </div>

                                <div class="row mb-3">
                                    <div class="col-5 mt-4 text-dark fw-bold">Full Name </div><span class="col-2 mt-4">:</span>
                                    <div class="col-5 mt-4 text-muted">@Model.FullName</div>
                                    <div class="col-5 mt-4 text-dark fw-bold">E-mail </div><span class="col-2 mt-4">:</span>
                                    <div class="col-5 mt-4 text-muted">@Model.Email</div>

                                    @if (!string.IsNullOrEmpty(Model.SecondaryEmail))
                                    {
                                        <div class="col-5 mt-4 text-dark fw-bold">Secondary Email </div><span class="col-2 mt-4">:</span>
                                        <div class="col-5 mt-4 text-muted">@Model.SecondaryEmail</div>
                                    }

                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <div class="col-5 mt-4 text-dark fw-bold">Mobile </div><span class="col-2 mt-4">:</span>
                                        <div class="col-5 mt-4 text-muted">@Model.PhoneNumber</div>
                                    }

                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber2))
                                    {
                                        <div class="col-5 mt-4 text-dark fw-bold">Secondary Mobile Number </div><span class="col-2 mt-4">:</span>
                                        <div class="col-5 mt-4 text-muted">@Model.PhoneNumber2</div>
                                    }

                                    @if (Model.Role == "Driver")
                                    {
                                        if (Model.BirthDate != null)
                                        {
                                            <div class="col-5 mt-4 text-dark fw-bold">Birth Date </div><span class="col-2 mt-4">:</span>
                                            <div class="col-5 mt-4 text-muted">@Model.BirthDate?.ToString("dd/MMM/yyyy")</div>
                                        }

                                        if (!string.IsNullOrEmpty(Model.EmploymentType))
                                        {
                                            <div class="col-5 mt-4 text-dark fw-bold">Employment Type </div><span class="col-2 mt-4">:</span>
                                            <div class="col-5 mt-4 text-muted">@Model.EmploymentType</div>
                                        }

                                        if (!string.IsNullOrEmpty(Model.LicenseNumber))
                                        {
                                            <div class="col-5 mt-4 text-dark fw-bold">License Number </div><span class="col-2 mt-4">:</span>
                                            <div class="col-5 mt-4 text-muted">@Model.LicenseNumber</div>
                                        }

                                        if (!string.IsNullOrEmpty(Model.LicenseProvince))
                                        {
                                            <div class="col-5 mt-4 text-dark fw-bold">License Province </div><span class="col-2 mt-4">:</span>
                                            <div class="col-5 mt-4 text-muted">@Model.LicenseProvince</div>
                                        }
                                    }

                                    <div class="col-5 mt-4 text-dark fw-bold">Joining Date </div><span class="col-2 mt-4">:</span>
                                    <div class="col-5 mt-4 text-muted">@Model.CreatedAt</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- More Info Tab -->
            <div class="tab-pane @(activeTab == "more_info" ? "active" : "")" id="more_Info" role="tabpanel">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">Organizations</h5>
                            </div>
                            <div class="card-body mx-n2">
                                <div id="orgContainer">
                                    @await Html.PartialAsync("_UserOrganizationsPartial", Model.Organizations)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Documents Tab -->
            <div class="tab-pane @(activeTab == "documents" ? "active" : "")" id="documents" role="tabpanel">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center mb-4">
                            <h5 class="card-title flex-grow-1 mb-0">Documents</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <label class="form-label fw-bold">License Number</label>
                                <p>@Model.LicenseNumber</p>
                            </div>
                            <div class="col-lg-6 mb-3">
                                <label class="form-label fw-bold">License Province</label>
                                <p>@Model.LicenseProvince</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4 text-center">
                                <label class="form-label fw-bold">Driver Image</label><br />
                                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                                {
                                    <img src="@Model.PhotoUrl" alt="Driver Image" class="img-fluid rounded shadow-sm" style="max-height:200px;" />
                                }
                                else
                                {
                                    <p class="text-muted">No image uploaded</p>
                                }
                            </div>

                            <div class="col-lg-4 text-center">
                                <label class="form-label fw-bold">License Front</label><br />
                                @if (!string.IsNullOrEmpty(Model.LicenseFrontUrl))
                                {
                                    <img src="@Model.LicenseFrontUrl" alt="License Front" class="img-fluid rounded shadow-sm" style="max-height:200px;" />
                                }
                                else
                                {
                                    <p class="text-muted">No document uploaded</p>
                                }
                            </div>

                            <div class="col-lg-4 text-center">
                                <label class="form-label fw-bold">License Back</label><br />
                                @if (!string.IsNullOrEmpty(Model.LicenseBackUrl))
                                {
                                    <img src="@Model.LicenseBackUrl" alt="License Back" class="img-fluid rounded shadow-sm" style="max-height:200px;" />
                                }
                                else
                                {
                                    <p class="text-muted">No document uploaded</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Organization Modal *@
<div class="modal fade" id="organizationModal" tabindex="-1" aria-labelledby="organizationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg ">
        <div class="modal-content">
            <div class="modal-header bg-light pb-2">
                <h5 class="modal-title" id="organizationModalLabel">Create Organization</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="organizationForm" method="post">
                    <input type="hidden" id="OrganizationId" name="Id" />
                    <input type="hidden" name="userId" value="@Model.UserId" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="OrgName" class="form-label">Organization Name</label>
                            <input type="text" class="form-control" id="OrgName" name="OrgName" required />
                        </div>
                        <div class="col-md-6">
                            <label for="OrgShortName" class="form-label">Short Name</label>
                            <input type="text" class="form-control" id="OrgShortName" name="ShortName" maxlength="5" required />
                        </div>
                        <div class="col-md-6 show-Org-fields">
                            <label for="OrgIsActive" class="form-label">Status</label>
                            <select class="form-select" id="OrgIsActive" name="IsActive">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-6" id="deactiveReasonWrapperOrg">
                            <label for="OrgDeActiveDiscription" class="form-label">Inactive Reason</label>
                            <input type="text" class="form-control" id="OrgDeActiveDiscription" name="DeActiveDiscription" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="organizationForm" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/CustomJs/userJs/userDetails.js"></script>
}
