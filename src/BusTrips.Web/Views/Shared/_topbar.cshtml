@using Microsoft.AspNetCore.Identity
@using BusTrips.Domain.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    string? role = "";
    string? fullName = null;
    string? UserImg = null;

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            var roles = await UserManager.GetRolesAsync(user);
            role = roles.FirstOrDefault() ?? "";

            fullName = user.FirstName + " " + user.LastName;
            UserImg = user.PhotoUrl;
        }
    }
}

<header id="page-topbar">
    <div class="layout-width">
        <div class="navbar-header">
            <div class="d-flex">
                <!-- Hamburger -->
                <button type="button" class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger" id="topnav-hamburger-icon">
                    <span class="hamburger-icon">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </button>
            </div>

            <div class="d-flex align-items-center">
                <div class="ms-1 header-item d-none d-sm-flex">
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle" data-toggle="fullscreen">
                        <i class="bx bx-fullscreen fs-22"></i>
                    </button>
                </div>

                <!-- User Profile -->
                <div class="dropdown ms-sm-3 header-item topbar-user">
                    <button type="button" class="btn" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="d-flex align-items-center">
                            <img src="@(!string.IsNullOrEmpty(UserImg) ? UserImg : "https://img.freepik.com/premium-psd/contact-icon-illustration-isolated_23-2151903357.jpg")"
                                 alt="Header Avatar"
                                 class="rounded-circle header-profile-user" />
                            <span class="text-start ms-xl-2">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text">@fullName</span>
                                    <span class="d-none d-xl-block ms-1 fs-12 text-muted user-name-sub-text">@role</span>
                                }
                            </span>
                        </span>
                    </button>

                    <div class="dropdown-menu dropdown-menu-end">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <h6 class="dropdown-header">Welcome, @fullName! </h6>
                        }
                        <a class="dropdown-item" href="@Url.Action("UserProfileSetting", "Account")">
                            <i class="mdi mdi-account-circle text-muted fs-16 align-middle me-1"></i> Profile
                        </a>
                        <a href="#" class="dropdown-item" onclick="openLogoutModal(event)">
                            <i class="mdi mdi-logout text-muted fs-16 align-middle me-1"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Logout Confirmation Modal -->
<div class="modal fade" id="logoutConfirmModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4">
            <div class="modal-header border-0 justify-content-end pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-0">
                <div class="mb-3 d-flex justify-content-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="#212529" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                    </svg>
                </div>

                <h5 class="fw-bold mb-1">Oh no! You're leaving...</h5>
                <p class="text-muted mb-4">Are you sure?</p>

                <div class="d-flex flex-column gap-3">
                    <button type="button" class="btn btn-danger waves-effect waves-light" data-bs-dismiss="modal">Nah, Just Kidding</button>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger waves-effect waves-light">Yes, Log Me Out</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function openLogoutModal(event) {
        event.preventDefault(); // prevent the link from navigating
        var logoutModal = new bootstrap.Modal(document.getElementById('logoutConfirmModal'));
        logoutModal.show();
    }
</script>
